<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>disable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
  </PropertyGroup>

  <PropertyGroup>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Version>1.0.7-prerelease</Version>
    <Authors>artemiusgreat</Authors>
    <PackageProjectUrl>https://github.com/Indemos/ScriptContainer</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Indemos/ScriptContainer</RepositoryUrl>
    <Description>Blazor proxy for missing JS events and methods.</Description>
    <Copyright>http://indemos.com</Copyright>
    <PackageTags>blazor event javascript</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="7.0.0-preview.1.22109.13" />
  </ItemGroup>

</Project>
